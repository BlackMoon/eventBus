{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for routes.json file format",

  "type": "array",
  "items": {
    "anyOf": [
      {
        "type": "object",
        "properties": {
          "component": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "preload": { "type": "boolean" },
          "redirectTo": { "type": "string" }
        }
      }
    ]
  }
}
