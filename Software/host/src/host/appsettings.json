{
  "$schema": "http://cachemanager.net/schemas/cachemanager.json#",

  "cacheManagers": [
    {
      "name": "secretCache",
      "handles": [
        {
          "knownType": "MsMemory",
          "expirationMode": "Sliding",
          "expirationTimeout": "0:05"
        }
      ]
    }
  ],

  "ConnectionStrings": {
    "AdminConnection": "User ID=postgres;Password=postgres;Host=eventBus;Port=5432;Database=postgres;Pooling=false;"
  },

  "Data": {
    "DefaultConnection": {
      "DataSource": "postgres",
      "Port": 5432,
      "ProviderName": "Npgsql",
      "Server": "eventBus"
    }
  },

  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },

  "SecretGeneration": {    
    "Path": "/api/secret"
  },

  "TokenAuthentication": {
    "Audience": "Audience",
    "Expiration": "0:05",
    "Issuer": "Astech",
    "Path": "/api/token",
    "SecretKey": "secretkey_secretkey456!"
  }
}
